# ======== ÁREA DO ALUNO ========
# Reutilizaremos código das atividades para implementação das classes para tentar fazer o código final 

class Pessoa:
    def __init__(self, nome, **kwargs):
        super().__init__(**kwargs)
        self.nome = nome

    def apresentar(self):
        return f"Olá, eu sou {self.nome}"


class Funcionario(Pessoa):
    def __init__(self, nome, salario, **kwargs):
        super().__init__(nome=nome, **kwargs)
        self.salario = salario

    def calcular_salario(self):
        return self.salario

    def apresentar(self):
        return f"Sou funcionário, meu nome é {self.nome} e meu salário é {self.salario}."


class Estudante(Pessoa):
    def __init__(self, nome, curso, bolsa=0.0, **kwargs):
        super().__init__(nome=nome, **kwargs)
        self.curso = curso
        self.bolsa = bolsa

    def calcular_bolsa(self):
        return self.bolsa

    def apresentar(self):
        return (
            f"Sou estudante, meu nome é {self.nome}, "
            f"curso {self.curso} e minha bolsa é {self.bolsa}."
        )


class Gerente(Funcionario):
    def __init__(self, nome, salario, equipe):
        super().__init__(nome=nome, salario=salario)
        self.equipe = equipe

    def apresentar(self):
        equipe_info = ", ".join(self.equipe)
        return (
            f"Sou gerente {self.nome}, salário {self.salario}. "
            f"Minha equipe ({len(self.equipe)} membros): {equipe_info}."
        )


class AssistentePesquisa(Estudante, Funcionario):
    def __init__(self, nome, curso, salario, bolsa=0.0):
        super().__init__(nome=nome, curso=curso, bolsa=bolsa, salario=salario)

    def apresentar(self):
        return (
            f"Sou assistente de pesquisa, estudante do curso {self.curso}, "
            f"com bolsa de {self.bolsa} e salário de {self.salario}. "
            f"Meu nome é {self.nome}."
        )
